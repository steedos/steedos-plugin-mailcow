    "strict": false,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
